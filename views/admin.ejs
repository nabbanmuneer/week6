<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8">
        <meta name="description" content="content">
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <table class="table table-striped">
          <tr>
            <th class="box">No.</th>
            <th class="table-head">First Name</th>
            <th class="table-head">Last Name</th>
            <th class="table-head">Email</th>
            <th class="table-head">User Type</th>
            <th class="table-head"></th>
            <th class="table-head"></th>

          </tr>
    
          <% let i=1; for(let datas of data) {%>
          <tr>
            <td class="box align-middle"><%=i%></td>
            <td class="box align-middle"><%= datas.fname%></td>
            <td class="box align-middle"><%= datas.lname%></td>
            <td class="box align-middle"><%= datas.email%></td>
            <td class="box align-middle"><%= datas.userType%></td>
            <td><form action="/users/deleteUser/<%= datas._id %>?_method=DELETE" method="post">
            <input type="submit" class="btn btn-primary" value="delete">
            </form></td>
            <td><a class="btn btn-primary" href="/users/admin/<%=datas._id%>/edit" >edit</a></td>
            
            <!-- <td class="box align-middle">
                        <div class=""><img class="img-responsive image" src="<%= datas.img %>" alt=""></div>
                    </td> -->
          </tr>
          <% i++ } %>
        </table>
        <a class="btn btn-primary" href="/users/logout" >logout</a>

        <form action="/users/admin/search" method="post" >
          <input type="text" name="search" placeholder="Search here">
          <button type="submit" class="btn btn-primary">search</button>
        </form>

        <a class="btn btn-primary" href="/users/admin/adminAdd" >add User</a>
      </body>
</html>